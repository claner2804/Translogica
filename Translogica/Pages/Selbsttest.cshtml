@page
@model SelbsttestModel
@{
    ViewData["Title"] = "Selbsttest: Praktikum oder Anrechnung?";
}

<section class="test-section">
    <h2 class="title">🎓 Selbsttest: Praktikum oder Anrechnung?</h2>

    <form method="post">
        <!-- Name -->
        <label for="Name">👤 Wie ist dein Name?</label>
        <input asp-for="Input.Name" class="form-input" />

        <!-- Arbeitsdauer -->
        <label>🕒 Wie lange arbeitest du schon bei Translogica?</label>
        <div class="flex-row">
            <div class="form-group">
                <span>Jahre</span>
                <input asp-for="Input.Years" class="form-input-small" />
            </div>
            <div class="form-group">
                <span>Monate</span>
                <input asp-for="Input.Months" class="form-input-small" />
            </div>
        </div>

        <!-- Stunden pro Woche -->
        <label for="Hours">⏱️ Wie viele Stunden pro Woche?</label>
        <input asp-for="Input.HoursPerWeek" class="form-input-small" />

        <!-- Tools verwendet? -->
        <label>🛠️ Verwendest du diese Tools in deiner Arbeit?<br /><small>(z. B. Visual Studio, SQL Server)</small></label>
        <div class="flex-row">
            <label><input type="radio" asp-for="Input.UsesTools" value="true" /> Ja</label>
            <label><input type="radio" asp-for="Input.UsesTools" value="false" /> Nein</label>
        </div>

        <!-- Stipendium -->
        <label>🎓 Beziehst du das Selbsterhalter-Stipendium und bist knapp an der Zuverdienstgrenze?</label>
        <div class="flex-row">
            <label><input type="radio" asp-for="Input.HasStipendium" value="true" /> Ja</label>
            <label><input type="radio" asp-for="Input.HasStipendium" value="false" /> Nein</label>
        </div>

        <!-- Ergebnis anzeigen -->
        <button type="submit" class="btn-primary">🔍 Test auswerten</button>



        <div style="margin-top: 20px; text-align: center;">

            <!-- Desktop-Version zurück -->
            <a href="/PraktikumTest" style="
        display: block;
        margin-top: 6px;
        font-size: 0.9rem;
        color: #1f2e5a;
        text-decoration: underline;
        opacity: 0.8;">
                oder lieber zurück zum Download der Desktop-Version
            </a>

        </div>

    </form>

    @if (Model.ErgebnisText != null)
    {
        <div class="result-box mt-4">
            <p>@Model.ErgebnisText</p>

            <form method="get">
                <button type="submit" class="btn btn-secondary mt-3">🔄 Test zurücksetzen</button>
            </form>
        </div>
    }
</section>

<style>
    .test-section {
        background: white;
        max-width: 480px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        background-color: #f5f5f5;
    }

        .test-section .title {
            color: #1f2e5a;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .form-input, .form-input-small {
        width: 100%;
        padding: 6px 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin: 4px 0 12px;
        background: white;
        font-size: 14px;
    }

    .form-input-small {
        max-width: 100px;
        display: inline-block;
    }

    .flex-row {
        display: flex;
        gap: 20px;
        margin-bottom: 12px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .btn-primary {
        display: block;
        width: 100%;
        background: #ffc107;
        color: #1f2e5a;
        font-weight: bold;
        padding: 10px;
        border: none;
        border-radius: 12px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background: #e0aa06;
        }

    .result-box {
        margin-top: 20px;
        padding: 10px;
        background-color: #fff;
        border: 2px dashed #1f2e5a;
        color: #1f2e5a;
        font-weight: bold;
        border-radius: 12px;
        text-align: center;
    }
</style>
