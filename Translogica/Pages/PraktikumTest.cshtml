@page
@model PraktikumTestModel
@{
    ViewData["Title"] = "Selbsttest: Praktikum oder Anrechnung?";
}

<div class="container py-5 px-3">
    <div class="shadow-lg rounded-4 p-5 w-100 mx-auto" style="max-width: 800px; background-color: #d9dcde;">

        <!-- Titel -->
        <h2 class="mb-4 text-center fs-3 fw-bold" style="color: #1f2e5a">
            🎓 Selbsttest: Praktikum oder Anrechnung?
        </h2>

        <!-- Zwei Bilder nebeneinander als Cards -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-6 col-lg-5 mb-3">
                <div class="bg-yellow rounded-4 shadow-sm p-3 h-100 text-center">
                    <img src="/images/praktikum_vorraussetzungen.png" alt="Voraussetzungen" class="img-fluid rounded-3 mb-2 hover-zoom" style="max-height: 200px; object-fit: contain;">
                    <p class="mb-0 fw-semibold" style="color: #1f2e5a;">Voraussetzungen für das Pflichtpraktikum</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-5 mb-3">
                <div class="bg-yellow rounded-4 shadow-sm p-3 h-100 text-center">
                    <img src="/images/praktikum_anrechnung.png" alt="Anrechnung" class="img-fluid rounded-3 mb-2 hover-zoom" style="max-height: 200px; object-fit: contain;">
                    <p class="mb-0 fw-semibold" style="color: #1f2e5a;">Anrechnung über berufliche Erfahrung</p>
                </div>
            </div>
        </div>



        <!-- Formular -->
        <form method="post" class="text-center">
            <div class="mb-4">
                <label class="form-label fw-semibold">🕒 Wie viele Stunden arbeitest du pro Woche bei Translogica?</label>
                <input type="number" class="form-control form-control-lg w-75 mx-auto rounded-4 shadow-sm" asp-for="StundenProWoche" required />
            </div>
            <div class="mb-4">
                <label class="form-label fw-semibold">📅 Wie lange arbeitest du dort schon (in Wochen)?</label>
                <input type="number" class="form-control form-control-lg w-75 mx-auto rounded-4 shadow-sm" asp-for="AnzahlWochen" required />
            </div>
            <div class="mb-5">
                <label class="form-label fw-semibold">💶 Wie viel verdienst du voraussichtlich im gesamten Jahr?</label>
                <input type="number" class="form-control form-control-lg w-75 mx-auto rounded-4 shadow-sm" asp-for="Jahresgehalt" required />
            </div>

            <button type="submit" class="btn test-button">
                🔍 Test auswerten
            </button>

        </form>

        <!-- Ergebnis -->
        @if (Model.Gesamtstunden > 0)
        {
            <div class="mt-5 alert @Model.AlertClass fs-5 rounded-4 shadow-sm">
                <h4 class="fw-bold">📊 Ergebnis</h4>
                <p>@Model.Ergebnis</p>
            </div>
        }
    </div>
</div>