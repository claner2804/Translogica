@page
@model PraktikumTestModel
@{
    ViewData["Title"] = "Selbsttest: Praktikum oder Anrechnung?";
}

<div class="container py-5 px-3">
    <div class="shadow-lg rounded-4 p-5 w-100 mx-auto" style="max-width: 800px; background-color: #d9dcde;">

        <!-- Titel -->
        <h2 class="mb-4 text-center fs-3 fw-bold" style="color: #1f2e5a">
            🎓 Selbsttest: Praktikum absolvieren oder anrechnen lassen?
        </h2>

        <!-- Zwei Bilder nebeneinander -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-6 col-12 text-center mb-3 mb-lg-0">
                <img src="/images/praktikum_vorraussetzungen.png"
                     alt="Voraussetzungen"
                     class="img-fluid rounded-3 shadow-sm"
                     style="max-height: 400px; object-fit: contain; width: 100%;">
                <p class="mt-3 fw-semibold" style="color: #1f2e5a;">Voraussetzungen für das Pflichtpraktikum</p>
            </div>
            <div class="col-lg-6 col-12 text-center">
                <img src="/images/praktikum_anrechnung.png"
                     alt="Anrechnung"
                     class="img-fluid rounded-3 shadow-sm"
                     style="max-height: 400px; object-fit: contain; width: 100%;">
                <p class="mt-3 fw-semibold" style="color: #1f2e5a;">Anrechnung über berufliche Erfahrung</p>
            </div>
        </div>


        
        <div style="margin-top: 20px; text-align: center; margin-bottom: 20px;">

            <!-- Download Selbsttest -->
            <a href="/downloads/SelbsttestPraktikum.zip" download style="
        display: inline-block;
        background-color: #ffc107;
        color: #1f2e5a;
        font-weight: bold;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 8px;">
                🖥️ Jetzt als Desktop-Version testen!
            </a>



            <!-- Online-Version Hinweis, mittig darunter -->
            <a href="/Selbsttest" style="
        display: block;
        margin-top: 6px;
        font-size: 0.9rem;
        color: #1f2e5a;
        text-decoration: underline;
        opacity: 0.8;">
                oder lieber online ausfüllen
            </a>


        </div>

    </div>

    <div style="margin-top: 80px; text-align: center;">

    <div class="mt-5 text-center">
        <h4 style="color:#1f2e5a;">Letzte 5 Ergebnisse – direkt aus der Cloud-Datenbank (Railway-PostgreSQL)</h4>
            <table class="table mt-3 mx-auto shadow-sm" style="
    max-width: 700px;
    border-collapse: separate;
    border-spacing: 0;
    border-radius: 12px;
    overflow: hidden;
    background-color: white;
">
                <thead class="table-light">
                    <tr style="background-color: #f1f1f1; color: #1f2e5a;">
                        <th style="padding: 12px;">Datum</th>
                        <th style="padding: 12px;">Name</th>
                        <th style="padding: 12px;">Stunden</th>
                        <th style="padding: 12px;">Ergebnis</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eintrag in Model.LetzteErgebnisse)
                    {
                        <tr style="border-bottom: 1px solid #dee2e6;" onmouseover="this.style.backgroundColor='#fdf7e2'" onmouseout="this.style.backgroundColor='white'">
                            <td style="padding: 10px;">@eintrag.Timestamp.ToString("dd.MM.yyyy")</td>
                            <td style="padding: 10px;">@eintrag.Name</td>
                            <td style="padding: 10px;">@eintrag.Gesamtstunden</td>
                            <td style="padding: 10px;">
                                @(eintrag.Ergebnistest.Contains("Anrechnung")
                                    ? "Anrechnung"
                                    : eintrag.Ergebnistest.Contains("Absolvierung")
                                    ? "Absolvierung"
                                    : "—")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
    </div>

</div>