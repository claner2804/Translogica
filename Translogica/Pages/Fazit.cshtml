@page "/Fazit"
@model Translogica.Pages.FazitModel
@{
    ViewData["Title"] = "Fazit";
}

<div style="display:flex; flex-direction:column; align-items:center; justify-content:center; margin:0; padding:0; font-family:sans-serif;">
    <h1 style="font-size:3rem; color:#1f2e5a; font-weight:bold; display: flex; align-items: center; gap: 4px; margin: 0;">
        <span style="display:inline-block;">devel</span>
        <img src="/images/cube.png" alt="Cube Logo" style="height:1em; vertical-align:middle; display:inline-block; margin: 0; padding: 0;" />
        <span style="display:inline-block;">perin</span>
    </h1>

    <hr style="width:200px; border: none; border-top: 3px dashed #1f2e5a; margin: 10px 0;" />

    <h2 style="color:#1f2e5a; font-weight:normal; letter-spacing:1px; margin: 0;">A STEP AHEAD IN MY CAREER</h2>
</div>


<div class="container" style="max-width: 900px; margin: 0 auto; font-family: sans-serif; padding: 40px 20px;">

    <p class="checklist-paragraph mb-4">
        Das Projekt hat mir gezeigt, wie viel Spaß mir das Entwickeln macht – und dass ich genau da weitergehen will. Ich kenn die Abläufe, arbeite gern kreativ und bin motiviert – der Schritt in die Entwicklung passt einfach. Was ich nun damit will ist:
    </p>

    <hr class="mb-4">

    <div class="checklist-wrapper">
        <div class="checklist-container">
            <ul class="checklist">
                <li>Praktikum anrechnen lassen</li>
                <li>Wochenstunden-Ausmaß beibehalten</li>
                <li>Wechsel ins Entwicklerteam</li>
                <li>Eventuell remote Aufgaben erledigen während des Auslandssemesters?</li>
            </ul>
        </div>
    </div>

    <hr class="mb-4">

    <div class="mt-5">
        <p class="checklist-paragraph">
        </p>
    </div>

    <div class="text-center mt-5">
        <a href="/" class="scroll-btn">Zurück zur Startseite</a>
    </div>
</div>
