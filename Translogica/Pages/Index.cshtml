@page
@model IndexModel
@{

    ViewData["Title"] = "Developerin – A Step Ahead in My Career";
}

<div style="display:flex; flex-direction:column; align-items:center; justify-content:center; min-height:80vh; font-family:sans-serif;">
    <h1 style="font-size:3rem; color:#1f2e5a; font-weight:bold; display: flex; align-items: center; gap: 4px;">
        <span style="display:inline-block;">devel</span>
        <img src="/images/cube.png" alt="Cube Logo" style="height:1em; vertical-align:middle; display:inline-block; margin: 0; padding: 0;" />
        <span style="display:inline-block;">perin</span>
    </h1>

    <hr style="width:200px; border: none; border-top: 3px dashed #1f2e5a; margin: 20px 0;" />

    <h2 style="color:#1f2e5a; font-weight:normal; letter-spacing:1px;">A STEP AHEAD IN MY CAREER</h2>

    <a asp-page="/Experience" style="margin-top:30px; padding:12px 24px; background-color:#1f2e5a; color:white; text-decoration:none; border-radius:6px;">
        Show my experience
    </a>
</div>

<div id="newsSlider" class="carousel slide" data-bs-ride="carousel" style="width: 100%; max-width: 800px; margin: auto;">
  <div class="carousel-inner">

    <div class="carousel-item active">
      <a href="/News/1">
        <div class="position-relative">
          <img src="/images/news1.jpg" class="d-block w-100" alt="News Image">
          <div class="position-absolute top-0 start-0 bg-dark bg-opacity-75 text-white p-2 m-2 rounded">
            „Wer aufhört besser zu werden, hat aufgehört gut zu sein“
          </div>
        </div>
        <div class="mt-3 px-2">
          <h4 class="fw-bold text-primary">„Wer aufhört besser zu werden, hat aufgehört gut zu sein“</h4>
          <p class="text-warning">02. April 2025</p>
        </div>
      </a>
    </div>

    <!-- Weitere Slides -->
    <div class="carousel-item">
      <a href="/News/2">
        <div class="position-relative">
          <img src="/images/news2.jpg" class="d-block w-100" alt="News Image 2">
          <div class="position-absolute top-0 start-0 bg-dark bg-opacity-75 text-white p-2 m-2 rounded">
            „Zweites Zitat, das inspiriert“
          </div>
        </div>
        <div class="mt-3 px-2">
          <h4 class="fw-bold text-primary">„Zweites Zitat, das inspiriert“</h4>
          <p class="text-warning">15. März 2025</p>
        </div>
      </a>
    </div>

  </div>

  <!-- Punkte-Navigation -->
  <div class="carousel-indicators mt-4">
    <button type="button" data-bs-target="#newsSlider" data-bs-slide-to="0" class="active"></button>
    <button type="button" data-bs-target="#newsSlider" data-bs-slide-to="1"></button>
  </div>
</div>

<!-- Alle News Button -->
<div class="text-center mt-4">
  <a href="/News" class="btn btn-outline-primary">Alle News</a>
</div>

