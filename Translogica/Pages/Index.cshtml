@page
@model IndexModel
@{
    ViewData["Title"] = "Developerin – A Step Ahead in My Career";
}

<div style="display:flex; flex-direction:column; align-items:center; justify-content:center; min-height:80vh; font-family:sans-serif;">
    <h1 style="font-size:3rem; color:#1f2e5a; font-weight:bold; display: flex; align-items: center; gap: 4px;">
        <span style="display:inline-block;">devel</span>
        <img src="/images/cube.png" alt="Cube Logo" style="height:1em; vertical-align:middle; display:inline-block; margin: 0; padding: 0;" />
        <span style="display:inline-block;">perin</span>
    </h1>

    <hr style="width:200px; border: none; border-top: 3px dashed #1f2e5a; margin: 20px 0;" />

    <h2 style="color:#1f2e5a; font-weight:normal; letter-spacing:1px;">A STEP AHEAD IN MY CAREER</h2>

    <a asp-page="/Experience" style="margin-top:30px; padding:12px 24px; background-color:#1f2e5a; color:white; text-decoration:none; border-radius:6px;">
        Show my experience
    </a>
</div>

<!-- carousel nummer 1: Dynamisches Team -->
<div id="newsSlider" class="carousel slide" data-bs-ride="carousel" style="width: 100%; max-width: 800px; margin: auto;">
  <div class="carousel-inner">

    <div class="carousel-item active">
      <a href="/News/1">
        <div class="position-relative">
          <div class="hover-image-wrapper position-relative">
            <img src="/images/firmenlauf_dynamischesTeam.jpg" class="d-block w-100 base-image" alt="News Image">
            <img src="/images/firmenlauf_dynamischesTeam.jpg" class="d-block w-100 hover-image position-absolute top-0 start-0" alt="Hover Image">
          </div>
          <div class="position-absolute top-0 start-0 bg-dark bg-opacity-75 text-white p-2 m-2 rounded">
            „Wer aufhört besser zu werden, hat aufgehört gut zu sein“
          </div>
        </div>
        <div class="mt-3 px-2">
          <h4 class="fw-bold text-primary">„Wer aufhört besser zu werden, hat aufgehört gut zu sein“</h4>
          <p class="text-warning">02. April 2025</p>
        </div>
      </a>
    </div>

    <!-- carousel nummer 2: Kenntnisse in der objektorientierten Entwicklung -->
    <div class="carousel-item">
      <a href="/News/2">
        <div class="position-relative">
          <div class="hover-image-wrapper position-relative">
            <img src="/images/github_Claudia.png" class="d-block w-100 base-image" alt="News Image 2">
            <img src="/images/github_Claudia.png" class="d-block w-100 hover-image position-absolute top-0 start-0" alt="Hover Image">
          </div>
          <div class="position-absolute top-0 start-0 bg-dark bg-opacity-75 text-white p-2 m-2 rounded">
            „Zweites Zitat, das inspiriert“
          </div>
        </div>
        <div class="mt-3 px-2">
          <h4 class="fw-bold text-primary">„Zweites Zitat, das inspiriert“</h4>
          <p class="text-warning">15. März 2025</p>
        </div>
      </a>
    </div>

    <!-- carousel nummer 3: neue Technologien -->
    <div class="carousel-item">
      <a href="/News/3">
        <div class="position-relative">
          <div class="hover-image-wrapper position-relative">
            <img src="/images/neueTechnologien.png" class="d-block w-100 base-image" alt="News Image 3">
            <img src="/images/neueTechnologien.png" class="d-block w-100 hover-image position-absolute top-0 start-0" alt="Hover Image">
          </div>
          <div class="position-absolute top-0 start-0 bg-dark bg-opacity-75 text-white p-2 m-2 rounded">
            „Technologie von morgen verstehen – heute!“
          </div>
        </div>
        <div class="mt-3 px-2">
          <h4 class="fw-bold text-primary">„Technologie von morgen verstehen – heute!“</h4>
          <p class="text-warning">20. Februar 2025</p>
        </div>
      </a>
    </div>

    <!-- carousel nummer 4: Karrieremöglichkeiten -->
    <div class="carousel-item">
      <a href="/News/4">
        <div class="position-relative">
          <div class="hover-image-wrapper position-relative">
            <img src="/images/karrieremöglichkeiten.png" class="d-block w-100 base-image" alt="News Image 4">
            <img src="/images/karrieremöglichkeiten.png" class="d-block w-100 hover-image position-absolute top-0 start-0" alt="Hover Image">
          </div>
          <div class="position-absolute top-0 start-0 bg-dark bg-opacity-75 text-white p-2 m-2 rounded">
            „Neue Chancen entdecken und nutzen“
          </div>
        </div>
        <div class="mt-3 px-2">
          <h4 class="fw-bold text-primary">„Neue Chancen entdecken und nutzen“</h4>
          <p class="text-warning">10. Februar 2025</p>
        </div>
      </a>
    </div>

  </div>

  <!-- Carousel Controls (Pfeile) -->
  <button class="carousel-control-prev" type="button" data-bs-target="#newsSlider" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#newsSlider" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>

  <!-- Punkte-Navigation -->
  <div class="carousel-indicators mt-4">
    <button type="button" data-bs-target="#newsSlider" data-bs-slide-to="0" class="active"></button>
    <button type="button" data-bs-target="#newsSlider" data-bs-slide-to="1"></button>
    <button type="button" data-bs-target="#newsSlider" data-bs-slide-to="2"></button>
    <button type="button" data-bs-target="#newsSlider" data-bs-slide-to="3"></button>
  </div>
</div>

<!-- Alle News Button -->
<div class="text-center mt-4">
  <a href="/News" class="btn btn-outline-primary">Alle News</a>
</div>